{% extends 'base.html.twig' %}

{% block title %}Log In!{% endblock %}

{% block body %}
<div class="container mx-auto">
    <div class="flex justify-center mt-8">
        <div class="bg-white p-6 rounded-lg shadow-lg w-full sm:max-w-md">
            <form method="post" class="space-y-4">
                <h1 class="text-3xl font-semibold mb-4 text-center">Accede a t√∫ cuenta</h1>

                {% if error %}
                    <div class="bg-red-500 text-white p-4 rounded mb-4">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div>
                    <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" name="email" id="inputEmail" class="w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" required autofocus>
                </div>
                <div>
                    <label for="inputPassword" class="block text-sm font-medium text-gray-700">Password</label>
                    <input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" required>
                </div>

                <div>
                    <button class="w-full bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

